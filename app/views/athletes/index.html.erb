<p id="notice"><%= notice %></p>

<h1>Athletes</h1>

<table>
  <thead>
    <tr>
      <th>Athlete name</th>
      <th>Gender</th>
      <th>Class year</th>
      <th>Sports</th>
      <th>Team</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @athletes.each do |athlete| %>
      <tr>
        <td><%= athlete.athlete_name %></td>
        <td><%= athlete.gender %></td>
        <td><%= athlete.class_year %></td>
        <td><%= athlete.sports_id %></td>
        <td><%= athlete.team_id %></td>
        <td><%= athlete.position %></td>
        <td><%= link_to 'Show', athlete %></td>
        <td><%= link_to 'Edit', edit_athlete_path(athlete) %></td>
        <td><%= link_to 'Destroy', athlete, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

